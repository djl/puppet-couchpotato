[Unit]
Description=Awesome PVR for usenet and torrents
After=network.target

[Service]
User=<%= scope['::couchpotato::user'] %>
ExecStart=/usr/bin/python <%= scope['::couchpotato::install_dir'] %>/CouchPotato.py -quiet --data_dir=<%= scope['::couchpotato::data_dir'] %>
Restart=on-failure
SuccessExitStatus=2 3 4
RestartForceExitStatus=3 4

[Install]
WantedBy=multi-user.target